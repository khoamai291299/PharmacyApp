<Window x:Class="PharmacyApp.Views.UserFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Tài khoản người dùng"
        Width="520"
        Height="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FAFAFA">

    <Border Background="#E3F2FD"
            BorderBrush="#2563EB"
            BorderThickness="2"
            CornerRadius="12"
            Padding="16">

        <DockPanel>

            <!-- HEADER -->
            <Border DockPanel.Dock="Top"
                    Background="#2563EB"
                    Padding="16"
                    CornerRadius="10,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Account"
                                             Foreground="White"
                                             Width="24"
                                             Height="24"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Tài khoản người dùng"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- FOOTER -->
            <StackPanel DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">

                <Button Width="110"
                        Height="40"
                        Margin="0,0,8,0"
                        Background="#2563EB"
                        Foreground="White"
                        FontWeight="Bold"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,6,0"/>
                        <TextBlock Text="Lưu"/>
                    </StackPanel>
                </Button>

                <Button Width="110"
                        Height="40"
                        Background="#BFDBFE"
                        Foreground="#1E3A8A"
                        FontWeight="Bold"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" Margin="0,0,6,0"/>
                        <TextBlock Text="Hủy"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <!-- CONTENT -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,16,0,0" Width="400">

                    <TextBox Text="{Binding User.Username}"
                             IsReadOnly="{Binding IsEdit}"
                             materialDesign:HintAssist.Hint="Username"
                             Margin="0,6"/>

                    <PasswordBox PasswordChanged="PasswordBox_PasswordChanged"
                                 materialDesign:HintAssist.Hint="Password"
                                 Margin="0,6"/>

                    <TextBox Text="{Binding User.Email}"
                             materialDesign:HintAssist.Hint="Email"
                             Margin="0,6"/>

                    <ComboBox ItemsSource="{Binding Employees}"
                              SelectedItem="{Binding SelectedEmployee}"
                              DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="Nhân viên"
                              Margin="0,6"/>

                    <ComboBox ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding User.Role}"
                              materialDesign:HintAssist.Hint="Vai trò"
                              Margin="0,6"/>

                    <ComboBox ItemsSource="{Binding Statuses}"
                              SelectedItem="{Binding User.Status}"
                              materialDesign:HintAssist.Hint="Trạng thái"
                              Margin="0,6"/>

                </StackPanel>
            </ScrollViewer>

        </DockPanel>
    </Border>
</Window>
