<Window x:Class="PharmacyApp.Views.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thanh toán"
        Width="960"
        Height="640"
        MinWidth="940"
        MinHeight="600"
        Background="#E3F2FD"
        WindowStartupLocation="CenterScreen">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- LABEL -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E3A8A"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- TEXTBOX 1 DÒNG -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
        </Style>

        <!-- BUTTON -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="46"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
        </Style>

        <!-- ICON + TEXT CHUẨN -->
        <Style x:Key="IconTextPanel" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="IconStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <Style x:Key="ButtonText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <!-- ================= MAIN ================= -->
    <Border Padding="28"
            CornerRadius="14"
            Background="White"
            BorderBrush="#2563EB"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== HEADER ===== -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        Margin="0,0,0,24"
                        VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="CashRegister"
                                         Width="30"
                                         Height="30"
                                         Foreground="#2563EB"
                                         Margin="0,6,10,0"/>
                <TextBlock Text="THANH TOÁN"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2563EB"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- ===== CONTENT ===== -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- ===== LEFT – CUSTOMER INFO ===== -->
                <StackPanel Grid.Column="0" Margin="0,0,30,0">

                    <TextBlock Text="Số điện thoại"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox Width="360"
                                 Margin="0 0 0 0"
                                 materialDesign:HintAssist.Hint="Nhập số điện thoại"
                                 Text="{Binding CustomerPhone, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Width="140"
                                Margin="12,0,0,0"
                                Command="{Binding FindCustomerCommand}">
                            <StackPanel Style="{StaticResource IconTextPanel}">
                                <materialDesign:PackIcon Kind="Magnify"
                                                         Style="{StaticResource IconStyle}"/>
                                <TextBlock Text="Tra cứu"
                                           Style="{StaticResource ButtonText}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <TextBlock Text="Khách hàng chưa tồn tại"
                               Foreground="#DC2626"
                               Visibility="{Binding IsCustomerNotFound, Converter={StaticResource BoolToVis}}"/>

                    <!-- ADD CUSTOMER -->
                    <Button Background="#0D9488"
                            Visibility="{Binding IsCustomerNotFound, Converter={StaticResource BoolToVis}}"
                            Command="{Binding AddCustomerCommand}">
                        <StackPanel Style="{StaticResource IconTextPanel}">
                            <materialDesign:PackIcon Kind="AccountPlus"
                                                     Style="{StaticResource IconStyle}"/>
                            <TextBlock Text="Thêm khách hàng"
                                       Style="{StaticResource ButtonText}"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="Tên khách hàng"/>
                    <TextBox Text="{Binding CustomerName}"/>

                    <TextBlock Text="Địa chỉ"/>
                    <TextBox Text="{Binding CustomerAddress}"
                             Height="80"
                             Padding="12"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalContentAlignment="Top"/>

                    <!-- PROMOTION -->
                    <StackPanel Margin="0,20,0,0"
                                Visibility="{Binding IsCustomerFound, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Mã khuyến mãi"/>
                        <ComboBox ItemsSource="{Binding AvailablePromotions}"
                                  SelectedItem="{Binding SelectedPromotion}"
                                  Width="360"
                                  Margin="0,0,0,14">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Display}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>


                        <TextBlock Text="{Binding SelectedPromotion.Id, StringFormat=Đã chọn: {0}}"
                                   Foreground="#2563EB"
                                   FontWeight="Bold"
                                   Visibility="{Binding SelectedPromotion, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </StackPanel>

                <!-- ===== RIGHT – TOTAL ===== -->
                <Border Grid.Column="1"
                        Background="#EFF6FF"
                        BorderBrush="#2563EB"
                        BorderThickness="2"
                        CornerRadius="12"
                        Padding="22"
                        VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="TỔNG THANH TOÁN"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#1E40AF"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:N0} đ}"
                                   FontSize="34"
                                   FontWeight="Bold"
                                   Foreground="#DC2626"
                                   HorizontalAlignment="Right"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ===== ACTION BUTTONS ===== -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,30,0,0">

                <!-- Nút in hóa đơn -->
                <Button Background="#0284C7"
                        Width="160"
                        Margin="0,0,14,0"
                        IsEnabled="{Binding CanPrintInvoice}"
                        Command="{Binding PrintInvoiceCommand}">
                    <StackPanel Style="{StaticResource IconTextPanel}">
                        <materialDesign:PackIcon Kind="Printer"
                                     Style="{StaticResource IconStyle}"/>
                        <TextBlock Text="IN HÓA ĐƠN"
                       Style="{StaticResource ButtonText}"/>
                    </StackPanel>
                </Button>

                <!-- Nút thanh toán -->
                <Button Width="240"
                        Background="#2563EB"
                        IsEnabled="{Binding CanConfirmPayment}"
                        Command="{Binding ConfirmCommand}">
                    <StackPanel Style="{StaticResource IconTextPanel}">
                        <materialDesign:PackIcon Kind="CheckCircle"
                                     Style="{StaticResource IconStyle}"/>
                        <TextBlock Text="XÁC NHẬN THANH TOÁN"
                       Style="{StaticResource ButtonText}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
