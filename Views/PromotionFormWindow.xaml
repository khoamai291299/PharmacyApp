<Window x:Class="PharmacyApp.Views.PromotionFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Khuyến mãi"
        Width="440"
        Height="500"
        WindowStartupLocation="CenterScreen">

    <Border Background="#E3F2FD"
            BorderBrush="#2563EB"
            BorderThickness="2"
            CornerRadius="12"
            Padding="16">

        <DockPanel LastChildFill="True">

            <!-- HEADER -->
            <Border Background="#2563EB"
                    DockPanel.Dock="Top"
                    Padding="16"
                    CornerRadius="10,10,0,0">

                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Tag"
                                             Foreground="White"
                                             Width="24"
                                             Height="24"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Thông tin khuyến mãi"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- FOOTER: NÚT LƯU/HỦY -->
            <StackPanel DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0"
                        Width="220">

                <Button Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="#2563EB"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"
                        Padding="20,0"
                        Width="100"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,6,0"/>
                        <TextBlock Text="Lưu"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="#BFDBFE"
                        Foreground="#1E3A8A"
                        FontWeight="Bold"
                        Height="40"
                        Width="100"
                        Padding="20,0">
                    Hủy
                </Button>
            </StackPanel>

            <!-- CONTENT: Form nhập liệu -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,16,0,0" Width="330">

                    <TextBox Text="{Binding Promotion.Id}" IsReadOnly="True"
                             materialDesign:HintAssist.Hint="Mã khuyến mãi" Margin="0,6"/>

                    <DatePicker SelectedDate="{Binding Promotion.StartDate}" Margin="0,6"
                                materialDesign:HintAssist.Hint="Ngày bắt đầu"/>
                    <DatePicker SelectedDate="{Binding Promotion.EndDate}" Margin="0,6"
                                materialDesign:HintAssist.Hint="Ngày kết thúc"/>

                    <TextBox Text="{Binding Promotion.RequiredPoints}" 
                             materialDesign:HintAssist.Hint="Điểm tích lũy" Margin="0,6"/>

                    <TextBox Text="{Binding Promotion.Quantity}" 
                             materialDesign:HintAssist.Hint="Số lượng khuyến mãi" Margin="0,6"/>

                    <TextBox Text="{Binding Promotion.DiscountPercent}" 
                             materialDesign:HintAssist.Hint="Giảm (%)" Margin="0,6"/>

                </StackPanel>
            </ScrollViewer>

        </DockPanel>
    </Border>
</Window>
