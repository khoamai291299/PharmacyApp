<Window x:Class="PharmacyApp.Views.CustomerFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thông tin khách hàng"
        Width="440" Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA">

    <Border Background="#E3F2FD" BorderBrush="#2563EB" BorderThickness="2" CornerRadius="12" Padding="16">
        <DockPanel LastChildFill="True">

            <!-- HEADER -->
            <Border Background="#2563EB" DockPanel.Dock="Top" Padding="16" CornerRadius="10,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Account" Foreground="White" Width="24" Height="24" Margin="0,0,8,0"/>
                    <TextBlock Text="Thông tin khách hàng" Foreground="White" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- FOOTER -->
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0" Width="220">
                <Button Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="#2563EB" Foreground="White" FontWeight="Bold"
                        Height="40" Width="100" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,6,0"/>
                        <TextBlock Text="Lưu"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="#BFDBFE" Foreground="#1E3A8A" FontWeight="Bold"
                        Height="40" Width="100">Hủy</Button>
            </StackPanel>

            <!-- CONTENT -->
            <StackPanel Margin="0,16,0,0" Width="350">
                <TextBox Text="{Binding Customer.Name, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Tên khách hàng" Margin="0,6"/>
                <TextBox Text="{Binding Customer.Phone, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Số điện thoại" Margin="0,6"/>
                <TextBox Text="{Binding Customer.Address, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Địa chỉ" Margin="0,6"/>
            </StackPanel>

        </DockPanel>
    </Border>
</Window>
