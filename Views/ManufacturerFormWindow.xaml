<Window x:Class="PharmacyApp.Views.ManufacturerFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thông tin nhà sản xuất"
        Width="440"
        Height="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA">

    <Border Background="#E3F2FD"
            BorderBrush="#2563EB"
            BorderThickness="2"
            CornerRadius="12"
            Padding="16">

        <DockPanel>

            <!-- HEADER -->
            <Border Background="#2563EB"
                    DockPanel.Dock="Top"
                    Padding="12"
                    CornerRadius="10,10,0,0">
                <TextBlock Text="Thông tin nhà sản xuất"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"/>
            </Border>

            <!-- FOOTER -->
            <StackPanel DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">
                <Button Width="100"
                        Height="36"
                        Background="#2563EB"
                        Foreground="White"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    Lưu
                </Button>

                <Button Width="100"
                        Height="36"
                        Margin="8,0,0,0"
                        Background="#BFDBFE"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    Hủy
                </Button>
            </StackPanel>

            <!-- CONTENT -->
            <StackPanel Margin="0,16,0,0">
                <TextBox Text="{Binding Manufacturer.Id}"
                         materialDesign:HintAssist.Hint="Mã nhà sản xuất"
                         Margin="0,6"/>

                <TextBox Text="{Binding Manufacturer.Name}"
                         materialDesign:HintAssist.Hint="Tên nhà sản xuất"
                         Margin="0,6"/>

                <TextBox Text="{Binding Manufacturer.Country}"
                         materialDesign:HintAssist.Hint="Quốc gia"
                         Margin="0,6"/>
            </StackPanel>

        </DockPanel>
    </Border>
</Window>
