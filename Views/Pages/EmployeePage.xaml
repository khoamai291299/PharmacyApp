<UserControl x:Class="PharmacyApp.Views.Pages.EmployeePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Background="#1976D2"
                Padding="16"
                CornerRadius="8">
            <TextBlock Text="Quản lý nhân viên"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Border>

        <!-- ===== CONTENT ===== -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Toolbar -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>

            <!-- ===== TOOLBAR ===== -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="0,0,0,16">

                <Button Content="+ Thêm nhân viên"
                        Width="180"
                        Height="40"
                        Background="#1976D2"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,12,0"
                        Command="{Binding AddCommand}"/>

                <TextBox Width="220"
                         VerticalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Tìm kiếm theo tên / SĐT"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- ===== DATAGRID ===== -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding ItemsView}"
                      SelectedItem="{Binding SelectedItem}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="40"
                      Background="White"
                      AlternatingRowBackground="#F5F5F5"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id}"
                                        Width="90"/>

                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        Width="180"/>

                    <DataGridTextColumn Header="Phone"
                                        Binding="{Binding Phone}"
                                        Width="130"/>

                    <DataGridTextColumn Header="Address"
                                        Binding="{Binding Address}"
                                        Width="200"/>

                    <DataGridTextColumn Header="Start Day"
                                        Binding="{Binding startday, StringFormat=d}"
                                        Width="120"/>

                    <DataGridTextColumn Header="Birthday"
                                        Binding="{Binding birthday, StringFormat=d}"
                                        Width="120"/>

                    <DataGridTextColumn Header="Salary"
                                        Binding="{Binding Salary}"
                                        Width="120"/>

                    <!-- ===== ACTION COLUMN ===== -->
                    <DataGridTemplateColumn Header="Thao tác"
                                            Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">

                                    <Button Content="Sửa"
                                            Margin="4,0"
                                            Padding="8,0"
                                            Height="24"
                                            Background="#0288D1"
                                            Foreground="White"
                                            Command="{Binding DataContext.EditCommand,
                                                              RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>

                                    <Button Content="Xóa"
                                            Margin="4,0"
                                            Padding="8,0"
                                            Height="24"
                                            Background="#D32F2F"
                                            Foreground="White"
                                            Command="{Binding DataContext.DeleteCommand,
                                                              RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
