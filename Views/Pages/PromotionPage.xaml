<UserControl x:Class="PharmacyApp.Views.Pages.PromotionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="#1976D2" Padding="16" CornerRadius="8">
            <TextBlock Text="Quản lý khuyến mãi" Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- CONTENT -->
        <StackPanel Grid.Row="1" Margin="0,16,0,0">

            <!-- Nút thêm -->
            <!-- Toolbar: Thêm + Tìm kiếm -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">

                <Button Content="+ Thêm khuyến mãi"
                        Width="180"
                        Background="#1976D2"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"
                        Command="{Binding AddPromotionCommand}"/>

                <TextBox Width="200"
                         Height="40"
                         Margin="12,0,0,0"
                         VerticalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Tìm theo mã KM"
                         Text="{Binding SearchId, UpdateSourceTrigger=PropertyChanged}"/>

                <DatePicker Width="140"
                            Height="40"
                            Margin="12,0,0,0"
                            SelectedDate="{Binding SearchDate}"
                            materialDesign:HintAssist.Hint="Ngày áp dụng"/>

            </StackPanel>


            <DataGrid ItemsSource="{Binding PromotionsView}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      RowHeight="40"
                      Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã" Binding="{Binding Id}" Width="120"/>
                    <DataGridTextColumn Header="Bắt đầu" Binding="{Binding StartDate, StringFormat=d}" Width="120"/>
                    <DataGridTextColumn Header="Kết thúc" Binding="{Binding EndDate, StringFormat=d}" Width="120"/>
                    <DataGridTextColumn Header="Điểm cần" Binding="{Binding RequiredPoints}" Width="100"/>
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Giảm (%)" Binding="{Binding DiscountPercent}" Width="100"/>


                    <DataGridTemplateColumn Header="Thao tác" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Sửa" Margin="4,0" Padding="8,0"
                                            Background="#0288D1"
                                            Height="20"
                                            Foreground="White"
                                            Command="{Binding DataContext.EditPromotionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="Xóa" Margin="4,0" Padding="8,0"
                                            Background="#D32F2F"
                                            Foreground="White"
                                            Height="20"
                                            Command="{Binding DataContext.DeletePromotionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
