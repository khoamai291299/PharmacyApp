<UserControl x:Class="PharmacyApp.Views.Pages.WarehouseReceiptPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- ================= DANH SÁCH THUỐC ================= -->
        <Border Background="#E3F2FD"
                BorderBrush="#1976D2"
                BorderThickness="2"
                CornerRadius="8"
                Margin="0,0,20,0">

            <DockPanel>

                <!-- HEADER -->
                <Border Background="#1976D2"
                        DockPanel.Dock="Top"
                        Padding="20,10"
                        CornerRadius="8,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Pill"
                                                 Foreground="White"
                                                 Width="22"
                                                 Height="22"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Danh sách thuốc"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </StackPanel>
                    
                </Border>
                <!-- FILTER + BỔ SUNG -->
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            Margin="10,10,10,0">

                    <TextBox Width="150"
                             Margin="0,0,8,0"
                             Height="34"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Tìm theo tên thuốc"/>

                    <ComboBox Width="120"
                              Margin="0,0,8,0"
                              Height="34"
                              ItemsSource="{Binding Types}"
                              SelectedItem="{Binding SelectedType}"
                              DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="Loại thuốc"/>

                    <Button Content="+ Bổ sung"
                            Height="36"
                            Padding="12,0"
                            Background="#1976D2"
                            Foreground="White"
                            Command="{Binding AddNewMedicineCommand}"/>
                </StackPanel>

                <!-- CONTENT -->
                <DataGrid ItemsSource="{Binding Medicines}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Background="White"
                          RowHeight="42"
                          Margin="10">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Tên thuốc" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Giá nhập" Binding="{Binding ImportPrice}" Width="120"/>

                        <!-- NÚT THÊM – RÕ RÀNG -->
                        <DataGridTemplateColumn Header="Thêm" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="20"
                                            Height="20"
                                            Background="#1976D2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="0"
                                            Command="{Binding DataContext.AddToCartCommand,
                                                      RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            materialDesign:ButtonAssist.CornerRadius="18">
                                        <materialDesign:PackIcon Kind="Plus"
                                                                 Width="20"
                                                                 Height="20"
                                                                 Foreground="White"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!-- ================= PHIẾU NHẬP KHO ================= -->
        <Border Grid.Column="1"
                Background="#E3F2FD"
                BorderBrush="#1976D2"
                BorderThickness="2"
                CornerRadius="8">

            <DockPanel>

                <!-- HEADER -->
                <Border Background="#1976D2"
                        DockPanel.Dock="Top"
                        Padding="20,10"
                        CornerRadius="8,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Warehouse"
                                                 Foreground="White"
                                                 Width="22"
                                                 Height="22"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Phiếu nhập kho"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- CONTENT -->
                <StackPanel Margin="10">

                    <TextBlock Text="{Binding NewReceipt.Id}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               Margin="0,0,0,10"/>

                    <DataGrid ItemsSource="{Binding Cart}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              Background="White"
                              RowHeight="42">

                        <DataGrid.Columns>

                            <!-- TÊN THUỐC KHÔNG LÀM CO NÚT -->
                            <DataGridTextColumn Header="Thuốc"
                                                Width="220"
                                                Binding="{Binding MedicineName}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding MedicineName}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="SL"
                                                Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" />
                            <DataGridTextColumn Header="Giá"
                                                Binding="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}" />
                            <DataGridTextColumn Header="Thành tiền"
                                                Width="120"
                                                IsReadOnly="True"
                                                Binding="{Binding TotalAmount}" />

                            <!-- NÚT XÓA – ĐỎ RÕ -->
                            <DataGridTemplateColumn Header="Xóa" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Width="20"
                                                Height="20"
                                                Background="#D32F2F"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="0"
                                                Command="{Binding DataContext.RemoveFromCartCommand,
                                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                materialDesign:ButtonAssist.CornerRadius="12">
                                            <materialDesign:PackIcon Kind="Delete"
                                                                     Width="20"
                                                                     Height="20"
                                                                     Foreground="White"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Text="{Binding TotalImport, StringFormat='Tổng tiền: {0:N0} đ'}"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               HorizontalAlignment="Right"
                               Margin="0,10"/>

                    <Button Content="LƯU PHIẾU NHẬP"
                            Command="{Binding SaveReceiptCommand}"
                            Height="45"
                            FontSize="16"
                            Background="#1976D2"
                            Foreground="White"/>
                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>
</UserControl>
