<UserControl x:Class="PharmacyApp.Views.Pages.CustomerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Nội dung -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="#1976D2" Padding="16" CornerRadius="8">
            <TextBlock Text="Quản lý khách hàng" Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- NỘI DUNG -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Nút thêm khách hàng -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="0,0,0,16">

                <Button Content="+ Thêm nhân viên"
                        Width="180"
                        Height="40"
                        Background="#1976D2"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,12,0"
                        Command="{Binding AddCommand}"/>
                <Button Content="Làm mới"
                        Width="180"
                        Height="40"
                        Background="#1976D2"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,12,0"
                        Command="{Binding RefreshCommand}"/>

                <TextBox Width="220"
                         VerticalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Tìm kiếm theo tên / SĐT"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <!-- Nút thêm khách hàng -->

            <!-- DataGrid với scroll bar tự động -->
            <DataGrid Grid.Row="1" ItemsSource="{Binding ItemsView}"
                                   SelectedItem="{Binding SelectedItem}" 
                                   AutoGenerateColumns="False" CanUserAddRows="False" RowHeight="40"
                                   Background="White"
                                   AlternatingRowBackground="#F5F5F5"
                                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                                   ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                   IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Tên khách hàng" Binding="{Binding Name}" Width="180"/>
                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Phone}" Width="120"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="180"/>
                    <DataGridTextColumn Header="Mã loại khách hàng" Binding="{Binding Tid}" Width="180"/>
                    <DataGridTextColumn Header="Tổng chi phí" Binding="{Binding TotalExpenditure}" Width="120"/>
                    <DataGridTextColumn Header="Điểm tích lũy" Binding="{Binding CumulativePoints}" Width="160"/>
                    <DataGridTemplateColumn Header="Thao tác" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Sửa" Margin="4,0" Padding="8,0" Background="#0288D1" Foreground="White" Height="24"
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="Xóa" Margin="4,0" Padding="8,0" Background="#D32F2F" Foreground="White" Height="24"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>  
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
