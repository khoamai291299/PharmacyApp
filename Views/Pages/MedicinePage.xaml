<UserControl x:Class="PharmacyApp.Views.Pages.MedicinePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Background="#1976D2"
                Padding="16"
                CornerRadius="8">
            <TextBlock Text="Quản lý thuốc"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Border>

        <!-- ===== CONTENT ===== -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Toolbar -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
            </Grid.RowDefinitions>

            <!-- ===== TOOLBAR ===== -->
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="0,0,0,16">

                <Button Width="160"
                        Height="40"
                        Background="#1976D2"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,12,0"
                        Command="{Binding AddCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PlusCircle"
                                                 Width="18"
                                                 Height="18"
                                                 Margin="0,0,6,0"/>
                        <TextBlock Text="Thêm thuốc"/>
                    </StackPanel>
                </Button>

                <TextBox Width="220"
                         VerticalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Tìm kiếm thuốc..."
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- ===== DATAGRID ===== -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Items}"
                      SelectedItem="{Binding SelectedItem}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="40"
                      Background="White"
                      AlternatingRowBackground="#F5F5F5"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      materialDesign:DataGridAssist.CellPadding="8">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Tên thuốc" Binding="{Binding Name}" Width="160"/>
                    <DataGridTextColumn Header="Hàm lượng" Binding="{Binding Content}" Width="100"/>
                    <DataGridTextColumn Header="Hoạt chất" Binding="{Binding ActiveIngredient}" Width="140"/>
                    <DataGridTextColumn Header="Ngày nhập" Binding="{Binding InputTime, StringFormat=dd/MM/yyyy}" Width="120"/>
                    <DataGridTextColumn Header="HSD" Binding="{Binding ExpirationDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                    <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" Width="80"/>
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Giá nhập" Binding="{Binding ImportPrice}" Width="100"/>
                    <DataGridTextColumn Header="Giá bán" Binding="{Binding SellingPrice}" Width="100"/>

                    <!-- ===== ACTION COLUMN ===== -->
                    <DataGridTemplateColumn Header="Thao tác" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Sửa"
                                            Margin="4,0"
                                            Padding="8,0"
                                            Height="24"
                                            Background="#0288D1"
                                            Foreground="White"
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="Xóa"
                                            Margin="4,0"
                                            Padding="8,0"
                                            Height="24"
                                            Background="#D32F2F"
                                            Foreground="White"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
