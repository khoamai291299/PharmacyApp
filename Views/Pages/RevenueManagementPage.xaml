<UserControl x:Class="PharmacyApp.Views.Pages.RevenueManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="20">
        <Border Background="#E3F2FD"
                BorderBrush="#2563EB"
                BorderThickness="2"
                CornerRadius="8">

            <DockPanel>

                <!-- HEADER -->
                <Border Background="#2563EB"
                        DockPanel.Dock="Top"
                        Padding="20,10">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CashMultiple"
                                                 Foreground="White"
                                                 Width="22"
                                                 Height="22"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Doanh thu theo nhân viên"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- FILTER -->
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            Margin="10">
                    <DatePicker Width="160"
                                Margin="0,0,12,0"
                                SelectedDate="{Binding FromDate}"
                                materialDesign:HintAssist.Hint="Từ ngày"/>

                    <DatePicker Width="160"
                                SelectedDate="{Binding ToDate}"
                                materialDesign:HintAssist.Hint="Đến ngày"/>
                </StackPanel>

                <!-- DATA -->
                <DataGrid ItemsSource="{Binding Items}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Margin="10"
                          RowHeight="44"
                          Background="White">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã NV"
                                            Binding="{Binding EmployeeId}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Tên nhân viên"
                                            Binding="{Binding EmployeeName}"
                                            Width="200"/>
                        <DataGridTextColumn Header="Số hóa đơn"
                                            Binding="{Binding TotalBills}"
                                            Width="140"/>
                        <DataGridTextColumn Header="Doanh thu"
                                            Binding="{Binding TotalRevenue, StringFormat={}{0:N0}}"
                                            Width="180"/>
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>
        </Border>
    </Grid>
</UserControl>
