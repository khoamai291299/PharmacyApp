<UserControl x:Class="PharmacyApp.Views.Pages.UserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:PharmacyApp.ViewModels">

    <UserControl.DataContext>
        <vm:UserPageViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Background="#1976D2"
                Padding="16"
                CornerRadius="8">
            <TextBlock Text="Quản lý tài khoản"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Border>

        <!-- ===== CONTENT ===== -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== TOOLBAR ===== -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,16">

                <Button Content="+ Thêm tài khoản"
                        Width="180"
                        Height="40"
                        Background="#1976D2"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,12,0"
                        Command="{Binding AddCommand}"/>

                <TextBox Width="220"
                         VerticalContentAlignment="Center"
                         materialDesign:HintAssist.Hint="Tìm Username / Email / Phone"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- ===== DATAGRID ===== -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding ItemsView}"
                      SelectedItem="{Binding Selected}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="40"
                      Background="White"
                      AlternatingRowBackground="#F5F5F5"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Username"
                                        Binding="{Binding Username}"
                                        Width="150"/>

                    <DataGridTextColumn Header="Email"
                                        Binding="{Binding Email}"
                                        Width="200"/>

                    <DataGridTextColumn Header="Phone"
                                        Binding="{Binding Phone}"
                                        Width="120"/>

                    <DataGridTextColumn Header="Employee"
                                        Binding="{Binding Eid}"
                                        Width="120"/>

                    <DataGridTextColumn Header="Role"
                                        Binding="{Binding Role}"
                                        Width="100"/>

                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding Status}"
                                        Width="100"/>

                    <!-- ===== ACTION ===== -->
                    <DataGridTemplateColumn Header="Thao tác"
                                            Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">

                                    <Button Content="Sửa"
                                            Margin="4,0"
                                            Padding="8,0"
                                            Height="24"
                                            Background="#0288D1"
                                            Foreground="White"
                                            Command="{Binding DataContext.EditCommand,
                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"/>

                                    <Button Content="Xóa"
                                            Margin="4,0"
                                            Padding="8,0"
                                            Height="24"
                                            Background="#D32F2F"
                                            Foreground="White"
                                            Command="{Binding DataContext.DeleteCommand,
                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
