<Window x:Class="PharmacyApp.Views.EmployeeFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thông tin nhân viên"
        Width="500"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FAFAFA">

    <Border Background="#E3F2FD"
            BorderBrush="#2563EB"
            BorderThickness="2"
            CornerRadius="12"
            Padding="16">

        <DockPanel LastChildFill="True">

            <!-- HEADER -->
            <Border DockPanel.Dock="Top"
                    Background="#2563EB"
                    Padding="16"
                    CornerRadius="10,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountTie"
                                             Foreground="White"
                                             Width="24"
                                             Height="24"
                                             Margin="0,0,8,0"/>
                    <TextBlock Text="Thông tin nhân viên"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- FOOTER -->
            <StackPanel DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">

                <Button Width="110"
                        Height="40"
                        Margin="0,0,8,0"
                        Background="#2563EB"
                        Foreground="White"
                        FontWeight="Bold"
                        Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,6,0"/>
                        <TextBlock Text="Lưu"/>
                    </StackPanel>
                </Button>

                <Button Width="110"
                        Height="40"
                        Background="#BFDBFE"
                        Foreground="#1E3A8A"
                        FontWeight="Bold"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" Margin="0,0,6,0"/>
                        <TextBlock Text="Hủy"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <!-- CONTENT -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,16,0,0" Width="400">

                    <TextBox Text="{Binding Employee.Id}"
                             IsReadOnly="True"
                             Background="#EEEEEE"
                             materialDesign:HintAssist.Hint="Mã nhân viên"
                             Margin="0,6"/>

                    <TextBox Text="{Binding Employee.Name, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Họ tên"
                             Margin="0,6"/>

                    <TextBox Text="{Binding Employee.Phone, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Số điện thoại"
                             Margin="0,6"/>

                    <ComboBox SelectedValue="{Binding Employee.Gender}"
                              SelectedValuePath="Tag"
                              materialDesign:HintAssist.Hint="Giới tính"
                              Margin="0,6">
                        <ComboBoxItem Content="Nam" Tag="True"/>
                        <ComboBoxItem Content="Nữ" Tag="False"/>
                    </ComboBox>

                    <TextBox Text="{Binding Employee.Address}"
                             materialDesign:HintAssist.Hint="Địa chỉ"
                             Margin="0,6"/>

                    <DatePicker SelectedDate="{Binding Employee.startday}"
                                materialDesign:HintAssist.Hint="Ngày vào làm"
                                Margin="0,6"/>

                    <DatePicker SelectedDate="{Binding Employee.birthday}"
                                materialDesign:HintAssist.Hint="Ngày sinh"
                                Margin="0,6"/>

                    <TextBox Text="{Binding Employee.Salary}"
                             materialDesign:HintAssist.Hint="Lương"
                             Margin="0,6"/>

                    <ComboBox ItemsSource="{Binding Departments}"
                              SelectedItem="{Binding SelectedDepartment}"
                              DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="Phòng ban"
                              Margin="0,6"/>

                    <ComboBox ItemsSource="{Binding Positions}"
                              SelectedItem="{Binding SelectedPosition}"
                              DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="Chức vụ"
                              Margin="0,6"/>

                </StackPanel>
            </ScrollViewer>

        </DockPanel>
    </Border>
</Window>
